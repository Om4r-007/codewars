    "def digital_root(n):\n",
    "    number_str = str(n)\n",
    "    digit_sum = 0\n",
    "    for char in number_str :\n",
    "     digit_sum += int(char)\n",
    "\n",
    "    if digit_sum >= 10 :\n",
    "        return digital_root(digit_sum)\n",
    "    else :\n",
    "        return digit_sum\n",
    "    \n",
    "digital_root(493193)"
   ]
